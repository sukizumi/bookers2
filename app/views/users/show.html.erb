<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/sidebar', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
        <%= link_to book_path(book.id) do%>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.get_profile_image %>
          <% else %>
            <%= image_tag 'no_image' %>
          <% end %>
        <% end %>
        </td>
        <td><%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>