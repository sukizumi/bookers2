<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'books/sidebar', books: @books %>
    </div>

    <div class="col-lg-8">
<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.get_profile_image %>
        <% else %>
          <%= image_tag 'no_image' %>
        <% end %>
        </td>
        <td><%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>