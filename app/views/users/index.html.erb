<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/sidebar', books: @books, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class ="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.get_profile_image %>
                <% else %>
                  <%= image_tag 'no_image' %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>